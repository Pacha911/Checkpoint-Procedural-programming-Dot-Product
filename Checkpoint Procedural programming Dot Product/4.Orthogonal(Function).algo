ALGORITHM orth_vectors
VAR
    v1,v2 : ARRAY_OF INTEGER [50];
    dot : INTEGER;
BEGIN
    // Taille de V1 
    n1 := read_size();
    // Les éléments de V1
    read_array(n1,v1);
    // Taille de V2
    n2 := read_size();
    // Les éléments de V2
    read_array(n2,v2);
    dot := dot_product(v1,v2);
    IF (dot = 0) THEN
        Write("V1 et V2 sont orthogonaux");
    ELSE
        Write("V1 et V2 ne sont pas orthogonaux");
    END_IF
END